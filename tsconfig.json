{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "lib",
      "declaration": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "baseUrl": "./src",
      "paths": {
          "@root": [
              "./"
          ],
          "@root/*": [
              "./*"
          ]
      },
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
  }
}